{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static-build"
    },
    {
      "src": "livres/**/*.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*).php",
      "dest": "/api/$1.php"
    },
    {
      "src": "/livres/(.*).php",
      "dest": "/livres/$1.php"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_VERSION": "18"
  }
}