{
    "version": 2,
    "builds": [
      {
        "src": "api/index.php",
        "use": "@vercel/php"
      },
      {
        "src": "api/livre.php",
        "use": "@vercel/php"
      }
    ],
    "routes": [
      {
        "src": "/script.js",
        "dest": "/public/script.js"
      },
      {
        "src": "/style.css",
        "dest": "/public/style.css"
      },
      {
        "src": "/images/(.*)",
        "dest": "/public/images/$1"
      },
      {
        "src": "/(.*).php(.*)",
        "dest": "/api/$1.php$2"
      },
      {
        "src": "/(.*)",
        "dest": "/api/index.php"
      }
    ],
    "env": {
      "NODE_VERSION": "18.x"
    }
  }